generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Market {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  name       String  @unique
  indexPrice Float
  orders     Order[]
}

model Order {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  price    Float
  size     Float
  offset   BigInt
  side     Side
  Market   Market @relation(fields: [marketId], references: [id], onDelete: Cascade)
  marketId String @db.ObjectId
}

enum Side {
  BID
  ASK
}
