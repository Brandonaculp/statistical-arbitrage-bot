generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./mydb.db"
}

model Market {
  id         Int     @id @default(autoincrement())
  name       String  @unique
  indexPrice Float
  orders     Order[]

  @@index([name])
}

model Order {
  id       Int    @id @default(autoincrement())
  price    Float
  size     Float
  offset   BigInt
  side     String
  Market   Market @relation(fields: [marketId], references: [id], onDelete: Cascade)
  marketId Int
}
